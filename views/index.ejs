<!doctype html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  </head>
  <body>
    <div class="w-full min-h-screen bg-zinc-900 text-white p-10">
        <h3 class="text-3xl mb-5">Create Account</h3>
        <form action="/register" method="post">
            <input class="px-3 py-2 rounded-md outline-none bg-transparent border-2 border-zinc-800" type="text" placeholder="name" name="name" id="name">
            <input class="px-3 py-2 rounded-md outline-none bg-transparent border-2 border-zinc-800" type="text" placeholder="username" name="username" id="username">
            <input class="px-3 py-2 rounded-md outline-none bg-transparent border-2 border-zinc-800" type="password" placeholder="password" name="password" id="password">
            <input class="px-3 py-2 rounded-md outline-none bg-transparent border-2 border-zinc-800" type="email" placeholder="email" name="email" id="email">
            <input class="px-3 py-2 rounded-md outline-none bg-transparent border-2 border-zinc-800" type="number" placeholder="age" name="age" id="age">
            <input class="bg-blue-500 cursor-pointer px-5 py-2 rounded-md" type="submit" value="Create">
        </form>
    </div>

  </body>
</html>